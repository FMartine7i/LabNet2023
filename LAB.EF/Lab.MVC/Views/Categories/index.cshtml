@model List<Lab.MVC.Models.CategoriesView>

@{
    ViewBag.Title = "Categories Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div style="display: flex; justify-content: flex-end">
        <div class="btn btn-outline-dark btn-rounded" style="margin: 10px">
            @Html.ActionLink("New Category", "Insert", new { @style = "color: #00ff80; text-decoration: none;" })
        </div>
    </div>

    <table class="table table-hover table-dark" style="margin-bottom: 3rem;">
        <thead>
            <tr>
                <th scope="col">Category ID</th>
                <th scope="col">Category name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <th scope="row" style="vertical-align: middle">@category.Id</th>
                    <td style="vertical-align: middle">@category.Name</td>
                    <td style="vertical-align: middle">@category.Description</td>
                    <td>
                        <div style="margin: 5px 0 5px 0">
                            <span class="btn btn-outline-info btn-rounded">
                                @Html.ActionLink("Update", "Update", new { id = category.Id })
                            </span>
                            <span style="margin: 0 10px 0 10px">or</span>
                            <span class="btn btn-outline-danger btn-rounded">
                                @Html.ActionLink("Delete", "Delete", new { id = category.Id }, new { onclick = "return confirm('¿Desea borrar la categoria?')" })
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
