@model Lab.MVC.Models.CategoriesView

@{
    ViewBag.Title = "Categories";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    @using (Html.BeginForm("Insert", "Categories", FormMethod.Post))
    {
        <div class="form-group">
            <label>Name: </label> @Html.TextBoxFor(r => r.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Description: </label> @Html.TextBoxFor(r => r.Description, new { @class = "form-control" })
        </div>
        <input type="submit" style="margin: 1rem 0 2rem 0" class="btn btn-primary btn-md btn-rounded" value="Save" />
    }
</body>
</html>
